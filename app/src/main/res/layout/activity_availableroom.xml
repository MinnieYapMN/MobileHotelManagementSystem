<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".availableroom">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="405dp"
        android:layout_height="195dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteY="70dp" />

    <EditText
        android:id="@+id/editTextTextPersonName9"
        style="al"
        android:layout_width="414dp"
        android:layout_height="70dp"
        android:background="#090909"
        android:ems="10"
        android:inputType="textPersonName"
        android:lineSpacingExtra="8sp"
        android:text="        Room Management"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F7F9FA"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:verticalScrollbarPosition="defaultPosition"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="409dp"
        android:layout_height="471dp"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="false"
        android:alpha="0.6"
        android:background="#F1EEEE"
        android:cropToPadding="false"
        android:rotationY="0"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/staffandroom"
        tools:layout_editor_absoluteX="0dp"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button12"
        android:layout_width="123dp"
        android:layout_height="49dp"
        android:shadowColor="#FFFFFF"
        android:text="Next"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="579dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="128dp"
        android:layout_height="43dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="Room No:"
        android:textAllCaps="false"
        android:textColor="#121111"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="362dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="10sp"
        android:text="Check Available Rooms"
        android:textAllCaps="true"
        android:textColor="#100F0F"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="278dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="139dp"
        android:layout_height="42dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:text="Room Type:"
        android:textAllCaps="false"
        android:textColor="#121111"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="serif"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="442dp" />

    <EditText
        android:id="@+id/editTextTextPersonName15"
        android:layout_width="208dp"
        android:layout_height="42dp"
        android:background="#F8F3F3"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#5A0F0F"
        android:textColor="#0B0A0A"
        android:textColorLink="#0F0F10"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="362dp" />

    <EditText
        android:id="@+id/editTextTextPersonName17"
        android:layout_width="208dp"
        android:layout_height="42dp"
        android:background="#F8F3F3"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#5A0F0F"
        android:textColor="#0B0A0A"
        android:textColorLink="#0F0F10"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="442dp" />

</androidx.constraintlayout.widget.ConstraintLayout>