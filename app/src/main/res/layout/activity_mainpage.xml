<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".mainpage">

    <EditText
        android:id="@+id/editTextTextPersonName3"
        style="al"
        android:layout_width="414dp"
        android:layout_height="70dp"
        android:background="#483A33"
        android:ems="10"
        android:inputType="textPersonName"
        android:lineSpacingExtra="8sp"
        android:text="               Main Page"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F7F9FA"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:verticalScrollbarPosition="defaultPosition"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="136dp"
        android:layout_height="92dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="roomReserve"
        android:text="Room Reservation"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:backgroundTint="#A88462"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="136dp"
        android:layout_height="92dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="roomServices"
        android:text="ROOM SERVICES"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:backgroundTint="#A88462"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="136dp"
        android:layout_height="92dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="staffMaintain"
        android:text="Staff Maintenance"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:backgroundTint="#A88462"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
    android:id="@+id/button5"
    android:layout_width="136dp"
    android:layout_height="92dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="50dp"
    android:layout_marginRight="50dp"
    android:fontFamily="sans-serif-condensed-medium"
    android:onClick="roomMaintian"
    android:text="Room Maintenance"
    android:textColor="#FFFFFF"
    android:textSize="14sp"
    app:backgroundTint="#A88462"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button6"
        android:layout_width="136dp"
        android:layout_height="92dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="checkOut"
        android:text="Check-Out"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:backgroundTint="#A88462"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="136dp"
        android:layout_height="92dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:onClick="checkIn"
        android:text="Check-In"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:backgroundTint="#A88462"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/btn_Logout"
        android:layout_width="84dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:onClick="Logout"
        android:text="LOGOUT"
        android:textSize="10sp"
        app:backgroundTint="#A88462"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>