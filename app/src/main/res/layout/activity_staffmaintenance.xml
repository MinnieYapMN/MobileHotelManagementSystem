<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".staffmaintenance">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="415dp"
            android:layout_height="147dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            style="al"
            android:layout_width="413dp"
            android:layout_height="62dp"
            android:background="#483A33"
            android:ems="10"
            android:inputType="textPersonName"
            android:lineSpacingExtra="8sp"
            android:text="        Staff Maintenance"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#F7F9FA"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonSShow"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:onClick="SShow"
            android:shadowColor="#FFFFFF"
            android:text="Show"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#A88462"
            app:layout_constraintStart_toEndOf="@+id/buttonSAdd"
            app:layout_constraintTop_toBottomOf="@+id/txtStaffEmail" />

        <Button
            android:id="@+id/buttonSUpdate"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:shadowColor="#FFFFFF"
            android:text="EDIT"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#A88462"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonSShow"
            app:layout_constraintTop_toBottomOf="@+id/txtStaffEmail" />

        <Button
            android:id="@+id/buttonSback"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:onClick="SBack"
            android:shadowColor="#FFFFFF"
            android:text="Back"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#A88462"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

        <Button
            android:id="@+id/buttonSAdd"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:shadowColor="#FFFFFF"
            android:text="Update"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#A88462"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtStaffEmail" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="136dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:text="Staff Name:"
            android:textAllCaps="false"
            android:textColor="#121111"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="106dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:text="Staff Id:"
            android:textAllCaps="false"
            android:textColor="#121111"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="178dp"
            android:layout_height="41dp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="10sp"
            android:text="Staff Details"
            android:textAllCaps="true"
            android:textColor="#100F0F"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="102dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:text="Birth:"
            android:textAllCaps="false"
            android:textColor="#121111"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="114dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:text="Gender:"
            android:textAllCaps="false"
            android:textColor="#121111"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="88dp"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:background="#00FDFAFA"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:text="Email:"
            android:textAllCaps="false"
            android:textColor="#0E0D0D"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/txtStaffId"
            android:layout_width="208dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="27dp"
            android:background="#F8F3F3"
            android:ems="10"
            android:inputType="textPersonName"
            android:shadowColor="#5A0F0F"
            android:textColor="#0B0A0A"
            android:textColorLink="#0F0F10"
            app:layout_constraintBottom_toTopOf="@+id/txtStaffName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/txtStaffName"
            android:layout_width="208dp"
            android:layout_height="42dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="26dp"
            android:background="#F8F3F3"
            android:ems="10"
            android:inputType="textPersonName"
            android:shadowColor="#5A0F0F"
            android:textColor="#0B0A0A"
            android:textColorLink="#0F0F10"
            app:layout_constraintBottom_toTopOf="@+id/txtStaffGender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.274"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/txtStaffId" />

        <EditText
            android:id="@+id/txtStaffGender"
            android:layout_width="208dp"
            android:layout_height="42dp"
            android:layout_marginStart="38dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:background="#F8F3F3"
            android:ems="10"
            android:hint=" F / M"
            android:inputType="textPersonName"
            android:shadowColor="#5A0F0F"
            android:textColor="#0B0A0A"
            android:textColorLink="#0F0F10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/txtStaffName" />

        <EditText
            android:id="@+id/txtStaffBirth"
            android:layout_width="208dp"
            android:layout_height="42dp"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="27dp"
            android:background="#F8F3F3"
            android:ems="10"
            android:hint=" dd/mm/yyyy"
            android:inputType="textPersonName"
            android:shadowColor="#5A0F0F"
            android:textColor="#0B0A0A"
            android:textColorLink="#0F0F10"
            app:layout_constraintBottom_toTopOf="@+id/txtStaffEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.559"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/txtStaffGender" />

        <EditText
            android:id="@+id/txtStaffEmail"
            android:layout_width="208dp"
            android:layout_height="42dp"
            android:layout_marginStart="62dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            android:background="#F8F3F3"
            android:ems="10"
            android:inputType="textPersonName"
            android:shadowColor="#5A0F0F"
            android:textColor="#0B0A0A"
            android:textColorLink="#0F0F10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/txtStaffBirth" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>